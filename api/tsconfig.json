{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": false,
    "checkJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "incremental": true,
    "moduleDetection": "force",
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src", "drizzle.config.ts", "eslint.config.js"],
  "exclude": ["node_modules"]
}
